{
  "Bff": {
    "ApiBaseUrl": "http://127.0.0.1:1031/",


    "FrontendOrigin": "http://localhost:5173",

    // # ACA NOMBRE DE LA COOKIE
    "CookieName": "bff.sid",

    // # ACA TIEMPO DE VIDA DE LA SESSION EN EL BFF
    "SessionMinutes": 60
  },

  "ReverseProxy": {
    "Routes": {
      "api_all": {
        "ClusterId": "api",
        "Match": { "Path": "/api/{**catch-all}" },

        // # ACA: BORRAR AuthorizationPolicy SI NO VAS A CONFIGURAR AddAuthentication/AddAuthorization
        // "AuthorizationPolicy": "IntranetUser",

        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "api": {
        "Destinations": {
          "d1": {
            "Address": "http://127.0.0.1:1031/"
          }
        }
      }
    }
  }
}





// "Jwt": {"Secret": "rhs6emnf67smkfdyuf6dskf7a*uh8rsc"


// Nota: este proxy es “catch-all” bajo /api (no expone todo sin querer). Todo lo que no sea /api/... queda fuera del proxy (por ejemplo /auth/login del BFF).



